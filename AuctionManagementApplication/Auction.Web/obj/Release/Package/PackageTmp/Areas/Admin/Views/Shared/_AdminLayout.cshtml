
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Admin-Dashboard</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Contents/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Contents/css/simple-sidebar.css" rel="stylesheet" />
    


    <script src="~/Contents/js/jquery.min.js"></script>

    <!--font awesome 5.1.2-->
    <link href="~/Contents/fontawesome/css/all.min.css" rel="stylesheet" />

    <!--sweet alert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>


    <!-- jQuery date tim piker-->
    <link href="~/Contents/jQueryDateTime/jquery-ui.min.css" rel="stylesheet" />

    <link href="~/Contents/jQueryDateTime/jquery-ui.theme.min.css" rel="stylesheet" />

    <style>
        .error {
            color: red;
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class=" border-right" id="sidebar-wrapper" style="background: rgb(0, 31, 63)">
            <div class="sidebar-heading" style="background: rgb(0, 31, 63);color: white"><i class="fas fa-bars mr-3"></i>Menu </div>
            <div class="list-group list-group-flush">

                <a href="@Url.Action("Index","Dashboard")" class="list-group-item list-group-item-action" ><i class="fas fa-tachometer-alt mr-2"></i>Dashboard</a>
                <a href="@Url.Action("Index","Category")" class="list-group-item list-group-item-action  "><i class="fas fa-folder mr-2"></i>Category</a>
                @*<a href="@Url.Action("","")" class="list-group-item list-group-item-action  "><i class="fas fa-ad mr-2"></i>Ad Request</a>*@
                <a href="@Url.Action("Index","PostedAd")" class="list-group-item list-group-item-action  "><i class="fas fa-ad mr-2"></i>Active Ads</a>
                <a href="@Url.Action("PendingAds","PostedAd")" class="list-group-item list-group-item-action  "><i class="fas fa-ad mr-2"></i>Pending Ads</a>
                <a href="@Url.Action("RejectedAds","PostedAd")" class="list-group-item list-group-item-action  "><i class="fas fa-ad mr-2"></i>Rejected Ads</a>
                <a href="@Url.Action("Index","UserAccount")" class="list-group-item list-group-item-action  "><i class="fas fa-users mr-2"></i>Users</a>
                <a href="@Url.Action("Index","District")" class="list-group-item list-group-item-action  "><i class="fas fa-map-marker-alt mr-2"></i>District</a>
                <a href="@Url.Action("Index","Thana")" class="list-group-item list-group-item-action  "><i class="fas fa-map-marker-alt mr-2"></i>Thana</a>



            </div>
        </div>
        <!-- /#sidebar-wrapper navbar-dark bg-dark -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg  border-bottom" style="background: rgb(40, 167, 69); color: white;">
                <button class="btn btn-primary" id="menu-toggle"><i class="fas fa-bars"></i></button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item" >
                            <a class="nav-link" href="@Url.Action("Logout","Account")" style="color: white;"> <i class="fas fa-sign-out-alt mr-1"></i>Logout</a>
                        </li>

                    </ul>
                 </div>
            </nav>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->


    <script src="~/Contents/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!--jQuery Validation-->
    @*<script src="~/Scripts/jquery-1.8.0.min.js"></script>*@
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Contents/jQueryDateTime/jquery-ui.min.js"></script>

    @*<script src="~/Contents/jQueryDateTime/jquery.js"></script>*@

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });

    var pathname = window.location.pathname;

    //window.alert(pathname);
    $('.list-group > a[href="'+pathname+'"]').addClass('active');

    </script>

</body>
</html>