
@model Auction.Entities.Product

@{
    var trueChecked = Model.IsActive ? "checked" : string.Empty;
    var falseChecked = !Model.IsActive ? "checked" : string.Empty;

    var imageURL = !string.IsNullOrEmpty(Model.ImageUrl1) ? Model.ImageUrl1 : "~/Contents/Image/system/placeholder-image.png";
}

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Update Category</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form id="categoryForm">
            <div class="modal-body">

                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Name" value="@Model.Name">
                        <span id="NameError"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Image</label>
                    <div class="col-sm-10">
                        <input name="ImageUrl" id="Imageurl" type="hidden" value="@Model.ImageUrl1" />
                        <input type="file" class="form-control" id="imageUpload" name="Image" accept=".png , .jpg">
                    </div>
                </div>
                <div class="col-md-4">
                    <div>
                        <img src="@imageURL" class="img-thumbnail img-fluid" id="categoryImage" alt="" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label class="col-sm-2 col-form-label">IsActive</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <div class=" form-control">
                                <label><input name="IsActive" type="radio" value="True" @trueChecked/> Yes</label>
                            </div>
                            <div class=" form-control">
                                <label><input name="IsActive" type="radio" value="False" @falseChecked/> No</label>
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button id="updateButton" type="button" class="btn btn-primary"><i class="fas fa-save mr-2"></i>Update</button>
                <button id="closeButton" type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-2"></i>Close</button>
            </div>
        </form>
    </div>
}



