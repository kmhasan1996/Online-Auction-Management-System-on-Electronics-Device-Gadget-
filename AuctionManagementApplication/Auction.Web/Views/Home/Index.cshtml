@model Auction.Web.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home Page";
    var str = "fas fa-desktop mr-2";
    var location = "fas fa-map-marker-alt mr-2";
}

<script src="~/Contents/map/countrymap.js"></script>
<script src="~/Contents/map/mapdata.js"></script>

<section class="flat-row" style="background: white">
    <div class="container" style="margin-top: -85px; ">
        <div class="row" style="padding-top: 20px">
            <div class="col-md-6">
                <h5 class="text-justify">Welcome to ElectricAuction.com - first online auction marketplace in Bangladesh!</h5>
                <p class="text-justify">Register, Bid and Win.Auction your electronics device/gadget Buy and sell electronics device/gadget <strong>in Bangladesh!</strong></p>

                <h3 class="mt-5">Top Categories</h3>
                <ul>
                    @foreach (var category in Model.Categories)
                    {
                        <li><i class="@str"></i><a href="@Url.Action("Index", "Shop", new {categoryID = @category.Id})" class="text-primary" @*class="btn btn-primary mt-2"*@>@category.Name</a></li>

                    }
                </ul>
            </div>
            <div class="col-md-6 float-right">
                <div class="row">
                    <div class="col-md-6 float-right">
                        <div class="float-right" style="background: black;">
                            @*<img src="~/Contents/Images/System/BDMap.jpg" height="200" width="200" />*@
                            @*<div id="map"></div>*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="float-right">

                            <h3>Cities</h3>
                            <ul>

                                @foreach (var cities in Model.Districts)
                                {
                                    <li><i class="@location"></i><a href="@Url.Action("Index", "Shop", new {categoryID = @cities.Id})" class="text-primary" @*class="btn btn-primary mt-2"*@>@cities.Name</a></li>

                                }
                            </ul>
                            @*</div>

                                <div class="float-right">*@
                            <h3 class="mt-5">Divisions</h3>
                            <ul>

                                @foreach (var cities in Model.Districts)
                                {
                                    <li><i class="@location"></i><a href="@Url.Action("Index", "Shop", new {categoryID = @cities.Id})" class="text-primary" @*class="btn btn-primary mt-2"*@>@cities.Name</a></li>

                                }
                            </ul>
                        </div>
                    </div>

                </div>


            </div>

        </div>
    </div>
</section>

<!-- IMAGE BOX -->
<section class="flat-row row-image-box style2" style="margin-top: -20px">
    <div class="container" style="background: white;">
        <div class="row">
            <div class="col-md-12">
                <div class="title-section margin-bottom-42 mt-4">
                    <h3>All Category</h3>
                </div>
            </div>
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-2">

                    <img src="@category.ImageUrl" height="100" width="100" alt="Image"><br />

                    <a href="@Url.Action("Index","Shop",new { categoryID=category.Id})" class="btn btn-primary mt-2">@category.Name</a>

                </div>
            }
        </div><!-- /.row -->

    </div><!-- /.container -->
</section>
<!-- END IMAGE BOX -->

<section class="flat-row" style="margin-top: -100px">
    <div class="container" >
        <div class="text-center margin-top-30">
            <h3>Do you have any electronic device or gadget to auction?</h3>
            <h4 class="mt-2">Click the "Post an ad now!" button to post your ad.</h4>
            <a href="@Url.Action("NewAd", "User")" class="btn btn-primary text-white text-capitalize mt-4">Post your ad now!</a>
        </div>
    </div>

</section>