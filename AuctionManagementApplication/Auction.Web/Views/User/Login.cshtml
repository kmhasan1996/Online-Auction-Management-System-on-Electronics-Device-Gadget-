@model Auction.Web.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="flat-row flat-iconbox">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title-section">
                    <h2 class="title">
                        Login
                    </h2>
                </div>
            </div>
        </div>

        <form id="loginForm" method="post">

            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-6">
                    
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label ">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" id="Email" name="Email" placeholder="Enter Email Address">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label ">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control form-control-sm" id="Password" name="Password" placeholder="Enter Password">
                        </div>
                    </div>
                    <div class="col-md-10">
                        @Html.ValidationMessage("Error", null, new { @class = "text text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button style="color:white;" type="submit" class="btn btn-default">Login</button>
                        </div>
                    </div>

                    <hr />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <label>Don't have an account?</label>
                            @*@Html.ActionLink("Register Now", "Register", "DashboardAccount", null, null)*@
                           
                            <a class="btn btn-success" href="@Url.Action("Register","User")">Register Now</a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</section>

